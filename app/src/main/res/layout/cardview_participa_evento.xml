<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="500dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="12dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <ImageView
            android:id="@+id/imagenEvento"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="300dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/imagenEvento"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tituloEvento"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/tituloEtiqueta"
                android:text="TÃ­tlo del evento"/>

            <TextView
                android:id="@+id/creador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adrian Prieto Lozano"
                style="@style/datosEtiqueta"
                />

            <TextView
                android:id="@+id/fecha_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/datosEtiqueta"
                android:text="12/12/2019, 23:43"/>

            <View
                android:background="?android:attr/listDivider"
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/descripcion"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                style="@style/datosEtiqueta"
                />

        </LinearLayout>



    </RelativeLayout>


</androidx.cardview.widget.CardView>