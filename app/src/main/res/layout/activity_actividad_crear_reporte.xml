<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CrearReporteFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tituloVentana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/verde3"
                android:padding="15dp"
                android:text="@string/nuevo_reporte"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="20dp"
                android:text="@string/fotografia"
                android:textColor="@color/grisNegro"
                android:textSize="16.85sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/fotoReporte"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="17dp"
                android:background="@color/colorGrisBlanco"
                android:layout_marginEnd="15dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="20dp"
                android:text="@string/ubicacion_evento"
                android:textColor="@color/grisNegro"
                android:textSize="16.85sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewUbicacion"
                style="@style/inputCrearEvento"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:inputType="text|numberDecimal"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="20dp"
                android:text="@string/fecha_hora"
                android:textColor="@color/grisNegro"
                android:textSize="16.85sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewFechaHora"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                style="@style/inputCrearEvento" />


            <TextView
                android:id="@+id/textViewContaminante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="20dp"
                android:text="@string/contaminante"
                android:textColor="@color/grisNegro"
                android:textSize="16.85sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/opcionesContaminante"
                style="@style/spinner"
                android:entries="@array/contaminantes_array"/>

            <TextView
                android:id="@+id/textViewVolumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="20dp"
                android:text="@string/volumen_residuo"
                android:textColor="@color/grisNegro"
                android:textSize="16.85sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/opcionesVolumen"
                style="@style/spinner"
                android:entries="@array/volumen_array"/>

            <TextView
                android:id="@+id/textViewDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="20dp"
                android:text="@string/descripcion_evento"
                android:textColor="@color/grisNegro"
                android:textSize="16.85sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/editTextDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/redondeado_gris"
                android:hint="@string/escribeDescripcion"
                android:inputType="textMultiLine"
                android:lines="7"
                android:gravity="top|start"
                android:padding="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <Button
                    android:id="@+id/botonCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/fondo_gradient_rojo_redondeado"
                    android:text="@string/boton_cancelar"
                    android:textColor="@android:color/white"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/botonAceptar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/fondo_gradient_verde_redondeado"
                    android:text="@string/boton_aceptar"
                    android:textColor="@android:color/white"
                    android:textStyle="normal"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

