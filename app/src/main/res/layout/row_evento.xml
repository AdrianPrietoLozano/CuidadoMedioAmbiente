<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp"
    android:elevation="5dp"
    android:background="@drawable/redondeado_gris">

    <ImageView
        android:id="@+id/imagenEvento"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:paddingRight="5dp"
        android:background="@drawable/borde_imagen"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saneamiento RÃ­o Santiago ..."
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/fechaHoraEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="29 de septiembre 2019, 13:00"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/grisNegro"/>

    </LinearLayout>

</LinearLayout>